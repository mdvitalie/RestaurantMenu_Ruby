
<div class="jumbotron mb-5 shadow-sm bg-light shadow-sm">
  <h1 class="display-4 text-center font-weight-bold ">Menu</h1>
  <p class="lead">Our restaurant has<b> <%= Menu.public_count %></b> menus at the moment!</p>
  <%#=============================================================================================================%>
  <!--<form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
    -->
    <form class="form-inline my-2 my-lg-0">
        <%= search_form_for @q do | f | %>
          <%= f.search_field :title_cont, class:"form-control mr-sm-2", placeholder:"Search by title" %>
          <%= f.submit "Search", class:"btn btn-outline-success my-2 my-sm-0" %>

        <% end %>
    </form>
  <%#=============================================================================================================%>
  <div id="menus">
  <% @menus.each do |menu| %>
  <% unless menu.archived? %>
  <hr class="my-4">
  
    <%= render menu %>
    <p>
      <%= link_to "Show this menu", menu, class: "btn btn-secondary" %>
    </p>
  <% end %>
  <%end%>
</div>
</div>



